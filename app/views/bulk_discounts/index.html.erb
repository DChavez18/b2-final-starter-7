
<body>
  <div class="row">
    <p class='col-12'>My Bulk Discounts</p>
  </div>

  <div class="row">
  <div class="col-12">
  <div id="bulk-discounts-section">
    <h2>Bulk Discounts</h2>
    <ul>
      <% @bulk_discounts.each do |bulk_discount| %>
        <li>
          <%= link_to "#{bulk_discount.name} - #{bulk_discount.percentage_discount}% off #{bulk_discount.quantity_threshold} items", merchant_bulk_discount_path(@merchant, bulk_discount) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <%= link_to "Create New Discount", new_merchant_bulk_discount_path(@merchant) %>
  </div>
</div>
</div>

</body>